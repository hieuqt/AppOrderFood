<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_name_table_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/tv_name_table_food_size"
        android:textStyle="bold"
        android:text="@string/hint_food_table"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/antquai"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/img_table_food"
        android:layout_width="@dimen/image_food_table_size"
        android:layout_height="@dimen/image_food_table_size"
        android:src="@drawable/ic_food_table"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/colorGray300"
        android:layout_below="@+id/tv_name_table_food"
        >
    </de.hdodenhof.circleimageview.CircleImageView>

    <ImageView
        android:id="@+id/img_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_order"
        android:layout_below="@id/img_table_food"
        android:layout_margin="@dimen/img_food_table_margin"
        />

    <ImageView
        android:id="@+id/img_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_table_food"
        android:layout_margin="@dimen/img_food_table_margin"
        android:layout_toRightOf="@id/img_order"
        android:src="@drawable/ic_payment" />

    <ImageView
        android:id="@+id/img_hide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_table_food"
        android:layout_margin="@dimen/img_food_table_margin"
        android:layout_toRightOf="@id/img_payment"
        android:src="@drawable/ic_hide" />

</RelativeLayout>