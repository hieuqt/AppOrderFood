<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.apporderfood">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.AddMenuActivity"
            android:windowSoftInputMode="stateVisible"/>
        <activity
            android:name=".activities.LoginActivity"
            android:windowSoftInputMode="stateVisible">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.RegisterActivity"
            android:windowSoftInputMode="stateVisible" />
        <activity android:name=".activities.HomePageActivity" />
        <activity
            android:name=".activities.AddTableFoodActivity"
            android:theme="@style/PopUpActivity"
            android:windowSoftInputMode="stateVisible" />
    </application>

</manifest>